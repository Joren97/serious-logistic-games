---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

interface Props {
	pageTitle?: string | undefined;
}
const { pageTitle } = Astro.props;
const fullPageTitle = pageTitle
	? `${pageTitle} | Serious Logistics Games`
	: `Serious Logistics Games`;
---

<!doctype html>
<html lang="en" data-theme="cupcake">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{fullPageTitle}</title>
	</head>

	<body class="flex flex-col h-dvh">
		<Navbar />
		<slot name="hero" />
		<main class="container mx-auto flex grow-1">
			<div class="py-4 prose lg:prose-lg lg:max-w-none">
				<slot />
			</div>
		</main>
		<Footer />
	</body>

	<style>
		html,
		body {
			margin: 0;
			width: 100%;
			height: 100%;
		}
	</style>
</html>
